<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_main_account_detail_account_sum_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/layout_main_account_detail_account_sum_readable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#141414"
            android:textSize="14sp"
            tools:text="314만 552원" />

        <TextView
            android:id="@+id/layout_main_account_detail_account_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="#989898"
            android:textSize="12sp"
            tools:text="314만 552원" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_main_account_detail_account_score_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_main_account_detail_account_sum_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="7dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_star_filled" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_star_filled" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_star_filled" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_star_filled" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_star_unfilled" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/layout_main_account_detail_account_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="12sp"
        android:textColor="#989898"
        app:layout_constraintTop_toTopOf="@id/layout_main_account_detail_account_score_layout"
        app:layout_constraintBottom_toBottomOf="@id/layout_main_account_detail_account_score_layout"
        app:layout_constraintStart_toEndOf="@id/layout_main_account_detail_account_score_layout"
        tools:text="분산투자를 매우 잘하고 계십니다!"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>